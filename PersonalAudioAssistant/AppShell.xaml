<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonalAudioAssistant.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonalAudioAssistant"
    xmlns:view="clr-namespace:PersonalAudioAssistant.View"
    Shell.FlyoutBehavior="Disabled"
    Title="PersonalAudioAssistant">

    <ShellContent
        Title="Вийти"
        IsVisible="{Binding IsLoggedInverse}"
        ContentTemplate="{DataTemplate view:AuthorizationPage}"
        Route="AuthorizationPage"
        Shell.NavBarIsVisible="False"/>


    <ShellContent
        Title="MainPage"
        IsVisible="{Binding }"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="ProgramPage"
        IsVisible="{Binding IsLogged}"
        ContentTemplate="{DataTemplate view:ProgramPage}"
        Route="ProgramPage"/>

</Shell>