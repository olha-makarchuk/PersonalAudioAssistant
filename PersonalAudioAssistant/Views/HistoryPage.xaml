<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAudioAssistant.Views.HistoryPage">

    <Grid>
        <ScrollView IsEnabled="{Binding IsNotBusy}">
            <VerticalStackLayout Padding="20" Spacing="10">

                <CollectionView ItemsSource="{Binding Conversations}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="5">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Description}" 
                                           FontAttributes="Bold" 
                                           FontSize="18" />
                                    <Label Text="{Binding DateTimeCreated}" 
                                           FontSize="14" 
                                           TextColor="Gray" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="60"
            HeightRequest="60" />
    </Grid>
</ContentPage>
