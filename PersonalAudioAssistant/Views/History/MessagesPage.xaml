<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PersonalAudioAssistant.ViewModel.History"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PersonalAudioAssistant.Views.History.MessagesPage"
             Shell.TitleView="{x:Null}">

    <Grid RowDefinitions="*,Auto" Padding="10">

        <!-- Scrollable Chat Section -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                
                <CollectionView 
                    ItemsSource="{Binding Messages}" 
                    SelectedItem="{Binding SelectedMessage, Mode=TwoWay}"
                    RemainingItemsThreshold="5"
                    RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
                    Margin="10">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Outer Grid with three columns: button, message, button -->
                            <Grid Margin="10,5" ColumnDefinitions="Auto,*,Auto">

                                <!-- Message bubble (Center column) -->
                                <Frame Grid.Column="1"
                   Padding="10"
                   CornerRadius="12"
                   HasShadow="True">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                 Binding="{Binding userRole}"
                                 Value="user">
                                            <Setter Property="BackgroundColor" Value="#90CAF9" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                 Binding="{Binding userRole}"
                                 Value="ai">
                                            <Setter Property="BackgroundColor" Value="#E1BEE7" />
                                        </DataTrigger>
                                    </Frame.Triggers>

                                    <Label Text="{Binding text}"
                       TextColor="#0d1996"/>
                                </Frame>

                                <!-- Play button for AI (Left side) -->
                                <Button Grid.Column="0"
                                        BorderColor="#757575"
                                        BorderWidth="1"
                                        CornerRadius="100" 
                                        FontSize="25"
                                        Text="â–¶"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MessagesViewModel}}, Path=PlaySelectedMessageCommand}"
                                        CommandParameter="{Binding .}">
                                    <Button.Triggers>
                                        <!-- Move the button to the left only if it's an AI message -->
                                        <DataTrigger TargetType="Button"
                                 Binding="{Binding userRole}"
                                 Value="ai">
                                            <Setter Property="Grid.Column" Value="0" />
                                        </DataTrigger>

                                        <!-- Move the button to the right if it's a user message -->
                                        <DataTrigger TargetType="Button"
                                 Binding="{Binding userRole}"
                                 Value="user">
                                            <Setter Property="Grid.Column" Value="2" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>



                    <CollectionView.Footer>
                    <Grid Padding="10" HorizontalOptions="Center">
                        <ActivityIndicator
                        IsVisible="{Binding IsLoadingMore}"
                        IsRunning="{Binding IsLoadingMore}"
                        WidthRequest="30"
                        HeightRequest="30"
                        Color="Black" />
                    </Grid>
                    </CollectionView.Footer>
                </CollectionView>

                <Label Text="{Binding RecognitionText}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
        <toolkit:MediaElement x:Name="mediaElement"
                                          Source="{Binding SelectedMessage.AudioPath}"
                                          IsVisible="False" />
        <ActivityIndicator
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="60"
            HeightRequest="60" />
    </Grid>
</ContentPage>