<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PersonalAudioAssistant.ViewModel.History"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PersonalAudioAssistant.Views.History.MessagesPage"
             Shell.TitleView="{x:Null}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:BoolToPlayPauseTextConverter x:Key="BoolToPlayPauseTextConverter"/>
            <vm:InverseBoolConverter x:Key="InverseBoolConverter"/>

            <Style x:Key="PlayButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4A90E2" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="sans-serif-medium" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="WidthRequest" Value="60" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Padding" Value="0" />
                <Style.Triggers>
                    <!-- Hover or Press effect (if supported) -->
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="#3565bd" />
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="*,0,Auto,Auto" Padding="10,0,0,0">
        <!-- Основна область повідомлень -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <CollectionView ItemsSource="{Binding Messages}" 
                                SelectedItem="{Binding SelectedMessage, Mode=TwoWay}" 
                                RemainingItemsThreshold="5"
                                RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
                                Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10,5" ColumnDefinitions="Auto,*,Auto">
                                <!-- Оболонка повідомлення -->
                                <Frame Grid.Column="1"
                                       Padding="10"
                                       CornerRadius="12"
                                       WidthRequest="300"
                                       HasShadow="True">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding userRole}"
                                                     Value="user">
                                            <Setter Property="BackgroundColor" Value="#90CAF9" />
                                            <Setter Property="HorizontalOptions" Value="End" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding userRole}"
                                                     Value="ai">
                                            <Setter Property="BackgroundColor" Value="#E1BEE7" />
                                            <Setter Property="HorizontalOptions" Value="Start" />
                                        </DataTrigger>
                                    </Frame.Triggers>

                                    <VerticalStackLayout Spacing="5">
                                        <!-- Текст повідомлення -->
                                        <Label Text="{Binding text}" 
                                               TextColor="#0d1996" 
                                               HorizontalOptions="Start" />

                                        <!-- Кнопка відтворення для AI або користувача -->


                                        <Button Style="{StaticResource PlayButtonStyle}"
                                                WidthRequest="30"
                                                HeightRequest="30"
        Text="▶"
        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MessagesViewModel}}, Path=PlaySelectedMessageCommand}"
        CommandParameter="{Binding .}">
                                            <Button.Triggers>
                                                <DataTrigger TargetType="Button"
                     Binding="{Binding userRole}"
                     Value="ai">
                                                    <Setter Property="HorizontalOptions" Value="Start" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Button"
                     Binding="{Binding userRole}"
                     Value="user">
                                                    <Setter Property="HorizontalOptions" Value="End" />
                                                </DataTrigger>
                                            </Button.Triggers>
                                        </Button>

                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.Footer>
                        <Grid Padding="10" HorizontalOptions="Center">
                            <ActivityIndicator IsVisible="{Binding IsLoadingMore}"
                                               IsRunning="{Binding IsLoadingMore}"
                                               WidthRequest="30"
                                               HeightRequest="30"
                                               Color="Black" />
                        </Grid>
                    </CollectionView.Footer>
                </CollectionView>

                <Label Text="{Binding RecognitionText}" 
                       FontSize="18"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- 🔻 Переміщений блок керування аудіо -->
        <VerticalStackLayout Grid.Row="2"
                         Padding="20">

            <Grid ColumnSpacing="15"
              ColumnDefinitions="Auto,Auto,Auto,*"
              VerticalOptions="Center"
              HorizontalOptions="Center">
                <Button Grid.Column="0"
                    Text="◀"
                    Command="{Binding PreviousCommand}"
                    IsEnabled="{Binding CanPrevious}"
                    FontSize="20"
                    CornerRadius="20"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Button Grid.Column="1"
                    Text="⏯"
                    Command="{Binding PlayPauseCommand}"
                    IsEnabled="{Binding CanPlayPause}"
                    FontSize="20"
                    CornerRadius="20"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Button Grid.Column="2"
                    Text="▶"
                    Command="{Binding NextCommand}"
                    IsEnabled="{Binding CanNext}"
                    FontSize="20"
                    CornerRadius="20"
                    WidthRequest="50"
                    HeightRequest="50" />
            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Spacing="20"
                                   Margin="0,20,0,0"
                       Padding="10, 0">

                <!-- Кнопка "Продовжити розмову" -->
                <Button Text="Продовжити розмову"
                        Command="{Binding ContinueConversationCommand}"
                        FontSize="14"
                        BackgroundColor="#aaaaaa"
                        TextColor="White"
                        CornerRadius="20"
                        Padding="10,5"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />

                <HorizontalStackLayout>
                    <!-- Мітка для автозапуску -->
                    <Label Text="Автовідтворення:"
                       VerticalOptions="Center"
                       FontSize="14"
                       HorizontalOptions="Center" />

                    <!-- Перемикач для автозапуску -->
                    <Switch IsToggled="{Binding IsAutoPlay}"
                        VerticalOptions="Center"
                        HorizontalOptions="Start" />
                </HorizontalStackLayout>

            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Прихований MediaElement -->
        <toolkit:MediaElement x:Name="mediaElement"
                          Source="{Binding SelectedMessage.AudioPath}"
                          IsVisible="False"
                          Grid.Row="3"/>
    </Grid>
</ContentPage>
