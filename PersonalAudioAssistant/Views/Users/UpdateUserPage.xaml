<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PersonalAudioAssistant.Views.Users.UpdateUserPage"
             Title="Оновлення"
             Shell.TitleView="{x:Null}"
             BackgroundColor="White">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0.0" />
            <GradientStop Color="#F5F5F5" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <ScrollView IsEnabled="{Binding IsNotBusy}">
            <VerticalStackLayout Padding="25" Spacing="25">
                <Frame CornerRadius="20" Padding="20" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Введіть ім'я користувача:" 
                       FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                        <Entry Text="{Binding CredentialsModel.UserName}" 
                       Placeholder="Ім'я користувача"
                       BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="20" Padding="20" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Індивідуальні параметри:" 
                       FontSize="18" FontAttributes="Bold" TextColor="#333333"/>

                        <Label Text="Початкова фраза:" TextColor="#555555"/>
                        <Entry Text="{Binding SubUser.StartPhrase}"
                       Placeholder="Початкова фраза" 
                       BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333"/>

                        <Label Text="Оберіть спосіб завершення:" FontSize="16" FontAttributes="Bold" TextColor="#333333"/>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <RadioButton Content="Кінцева фраза" GroupName="CompletionOption" 
                                 IsChecked="{Binding EndOptionsModel.IsEndPhraseSelected}" />
                            <RadioButton Content="Час завершення" GroupName="CompletionOption"
                                 IsChecked="{Binding EndOptionsModel.IsEndTimeSelected}" />
                        </StackLayout>

                        <StackLayout IsVisible="{Binding EndOptionsModel.IsEndPhraseSelected}">
                            <Label Text="Кінцева фраза:" TextColor="#555555"/>
                            <Entry Text="{Binding SubUser.EndPhrase}"
                           Placeholder="Кінцева фраза" 
                           BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333"/>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding EndOptionsModel.IsEndTimeSelected}">
                            <Label Text="Час завершення (сек):" TextColor="#555555"/>
                            <Picker ItemsSource="{Binding Filter.EndTimeOptions}"
                            SelectedItem="{Binding EndOptionsModel.SelectedEndTime}"
                            Title="Оберіть час"
                            BackgroundColor="#F0F0F0"
                            TextColor="#333333" />
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="10">
                            <CheckBox IsChecked="{Binding IsPasswordEnabled}" />
                            <Label Text="Використовувати пароль до історії розмов:" VerticalOptions="Center" TextColor="#333333"/>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding IsPasswordEnabled}">
                            <StackLayout>
                                <Label Text="Змінити пароль до історії розмов:" FontSize="16" FontAttributes="Bold" TextColor="#333333" Margin="0, 20, 0, 10"/>
                                <Label Text="Старий пароль:" TextColor="#555555"/>
                                <Entry Text="{Binding OldPassword}" Placeholder="Введіть старий пароль" BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333" IsPassword="True"/>
                            </StackLayout>
                            <StackLayout>
                                <Label Text="Новий пароль:" TextColor="#555555"/>
                                <Entry Text="{Binding NewPassword}" Placeholder="Введіть новий пароль" BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333" IsPassword="True"/>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout>
                            <Label Text="Зразок вашого голосу:" FontSize="16" FontAttributes="Bold" TextColor="#333333" Margin="0, 20, 0, 20"/>
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Button Text="Розпочати запис"
                                    Command="{Binding RecordReferenceVoiceCommand}"
                                    HorizontalOptions="Center" />
                                <Image Source="checkmark.png"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   Margin="10, 0, 0, 0"
                                   IsVisible="{Binding IsAudioRecorded}" />
                            </HorizontalStackLayout>
                        </StackLayout>

                    </VerticalStackLayout>
                </Frame>

                <Label Text="Виберіть голос:"
                               FontSize="18" FontAttributes="Bold" TextColor="#333333" Margin="0, 20, 0, 10"/>
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <RadioButton Content="Базовий голос" GroupName="VoiceOption"
                                         IsChecked="{Binding IsBaseVoiceSelected}" />
                    <RadioButton Content="Клонувати голос" GroupName="VoiceOption"
                                         IsChecked="{Binding CloneVoiceModel.isCloneVoiceSelected}" />
                </StackLayout>

                <Frame IsVisible="{Binding IsBaseVoiceSelected}" CornerRadius="20" Padding="20" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Фільтрація голосів:" 
                       FontSize="18" FontAttributes="Bold" TextColor="#333333"/>

                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker Title="Тон/Настрій"
                            ItemsSource="{Binding Filter.DescriptionOptions}"
                            SelectedItem="{Binding Filter.Description, Mode=TwoWay}"
                            Grid.Column="0" BackgroundColor="#F0F0F0" TextColor="#333333" />
                            <Button Grid.Column="1"
                            BackgroundColor="Grey" 
                            Text="X" 
                            WidthRequest="40" HeightRequest="40"  
                            FontSize="16" 
                            Command="{Binding ResetDescriptionFilterCommand}" />
                        </Grid>

                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker Title="Вік"
                            ItemsSource="{Binding Filter.AgeOptions}"
                            SelectedItem="{Binding Filter.Age, Mode=TwoWay}"
                            Grid.Column="0" BackgroundColor="#F0F0F0" TextColor="#333333" />
                            <Button Grid.Column="1"
                            BackgroundColor="Grey" 
                            Text="X" 
                            WidthRequest="40" HeightRequest="40"  
                            FontSize="16" 
                            Command="{Binding ResetAgeFilterCommand}" />
                        </Grid>

                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker Title="Стать"
                            ItemsSource="{Binding Filter.GenderOptions}"
                            SelectedItem="{Binding Filter.Gender, Mode=TwoWay}"
                            Grid.Column="0" BackgroundColor="#F0F0F0" TextColor="#333333" />
                            <Button Grid.Column="1"
                            BackgroundColor="Grey" 
                            Text="X" 
                            WidthRequest="40" HeightRequest="40"  
                            FontSize="16" 
                            Command="{Binding ResetGenderFilterCommand}" />
                        </Grid>

                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker Title="Стиль"
                            ItemsSource="{Binding Filter.UseCaseOptions}"
                            SelectedItem="{Binding Filter.UseCase, Mode=TwoWay}"
                            Grid.Column="0" BackgroundColor="#F0F0F0" TextColor="#333333" />
                            <Button Grid.Column="1"
                            BackgroundColor="Grey" 
                            Text="X" 
                            WidthRequest="40" HeightRequest="40"  
                            FontSize="16" 
                            Command="{Binding ResetUseCaseFilterCommand}" />
                        </Grid>

                        <Label Text="Виберіть голос:" 
                       FontSize="18" FontAttributes="Bold" TextColor="#333333" Margin="10,20,0,10"/>
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker Grid.Column="0" ItemsSource="{Binding Voices}"
                                    ItemDisplayBinding="{Binding Name}" 
                                    SelectedItem="{Binding SelectedVoice}"
                                    BackgroundColor="#F0F0F0" HeightRequest="50"
                                    TextColor="#333333" />
                            <Button Grid.Column="1"
                                    Command="{Binding PlaySelectedVoiceCommand}"
                                    FontSize="22"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    BorderWidth="0" CornerRadius="30"
                                    Margin="10,0,0,0"
                                    ImageSource="playaudio.png"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <Frame IsVisible="{Binding CloneVoiceModel.isCloneVoiceSelected}" CornerRadius="20" Padding="20" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="15">

                        <Label Text="Клонування голосу:"
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#333333" 
                                   Margin="0, 10, 0, 10"/>

                        <HorizontalStackLayout VerticalOptions="Center" >
                            <Label Text="Виберіть файл:" 
                                   TextColor="#555555"
                                   VerticalOptions="Center"/>

                            <Button BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    HeightRequest="60"
                                    FontSize="16"
                                    Command="{Binding PickAudioFileCommand}"
                                    ImageSource="fileaudio.png"/>
                            <Label Text="{Binding SelectedAudioFilePath}" TextColor="#555555" />

                        </HorizontalStackLayout>

                        <Label Text="Початок фрагменту (сек):" TextColor="#555555"/>
                        <Entry Keyboard="Numeric"
                               Placeholder="Напр. 0"
                               Text="{Binding CloneVoiceModel.CloneStart}"
                               BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333"/>

                        <Label Text="Кінець фрагменту (сек):" TextColor="#555555"/>
                        <Entry Keyboard="Numeric"
                               Placeholder="Напр. 5"
                               Text="{Binding CloneVoiceModel.CloneEnd}"
                               BackgroundColor="#F0F0F0" HeightRequest="50" TextColor="#333333"/>
                    </VerticalStackLayout>
                </Frame>
                
                <toolkit:MediaElement x:Name="mediaElement" 
                              Source="{Binding SelectedVoiceUrl}" 
                              IsVisible="False" />


                <HorizontalStackLayout Spacing="50" HorizontalOptions="Center">
                    <Button Text="Видалити" 
                        Command="{Binding DeleteUserCommand}"
                        FontSize="20" TextColor="White" BackgroundColor="#a10900"
                        CornerRadius="30" HeightRequest="50" WidthRequest="130" />

                    <Button Text="Зберегти" 
                        Command="{Binding UpdateUserCommand}"
                        FontSize="20" TextColor="White" BackgroundColor="#036700"
                        CornerRadius="30" HeightRequest="50" WidthRequest="130" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <BoxView BackgroundColor="Black"
                 Opacity="0.3"
                 IsVisible="{Binding IsBusy}"
                 InputTransparent="True" />
        
        <ActivityIndicator
        IsVisible="{Binding IsBusy}"
        IsRunning="{Binding IsBusy}"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        WidthRequest="60"
        HeightRequest="60" />
    </Grid>
</ContentPage>
