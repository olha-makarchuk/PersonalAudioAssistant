<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:PersonalAudioAssistant.ViewModel"
    x:Class="PersonalAudioAssistant.Views.PaymentPage"
    Title="Керування оплатою">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid>
        <ScrollView IsEnabled="{Binding IsNotBusy}">
            <VerticalStackLayout Padding="24" Spacing="24">

                <Label Text="Введіть ваші дані:"
                                   FontSize="16"
                       FontAttributes="Bold"
                       IsVisible="{Binding IsCardPreset, Converter={StaticResource InvertedBoolConverter}}"

                       TextColor="#444" 
                       HorizontalOptions="Center"/>
                <!-- Card container: always visible, shows edit or masked view -->
                <Frame Padding="16" CornerRadius="20" BackgroundColor="#3966c8" HasShadow="True" WidthRequest="320" HorizontalOptions="Center">
                    <Grid>
                        <!-- Edit/New entry form -->
                        <StackLayout Spacing="16"
                                     IsVisible="{Binding IsCardPreset, Converter={StaticResource InvertedBoolConverter}}"
                                     BindingContext="{Binding .}">
                            <Label Text="Нова картка" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                            <Entry Text="{Binding CardNumber}"
                                   Placeholder="0000 0000 0000 0000"
                                   Keyboard="Numeric"
                                   FontSize="18"
                                   BackgroundColor="Transparent"
                                   TextColor="White" />
                            <HorizontalStackLayout Spacing="10">
                                <Entry Text="{Binding DateExpirience}"
                                       Placeholder="MM/YY"
                                       WidthRequest="100"
                                       FontSize="16"
                                       BackgroundColor="Transparent"
                                       TextColor="White" />
                                <Entry Text="{Binding CVV_number}"
                                       Placeholder="CVV"
                                       WidthRequest="100"
                                       FontSize="16"
                                       IsPassword="True"
                                       BackgroundColor="Transparent"
                                       TextColor="White" />
                            </HorizontalStackLayout>
                        </StackLayout>

                        <!-- Masked card view -->
                        <StackLayout Spacing="16"
                                     IsVisible="{Binding IsCardPreset}">
                            <Label Text="Ваша картка" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                            <Entry Text="{Binding MaskedCardNumber}"
                                   IsReadOnly="True"
                                   Keyboard="Numeric"
                                   FontSize="18"
                                   BackgroundColor="Transparent"
                                   TextColor="White" />
                            <HorizontalStackLayout Spacing="10">
                                <Entry Text="{Binding DateExpirience}"
                                       IsReadOnly="True"
                                       Placeholder="MM/YY"
                                       WidthRequest="100"
                                       FontSize="16"
                                       BackgroundColor="Transparent"
                                       TextColor="White" />
                                <Entry Text="{Binding CVV_number}"
                                       IsReadOnly="True"
                                       Placeholder="CVV"
                                       WidthRequest="100"
                                       FontSize="16"
                                       IsPassword="True"
                                       BackgroundColor="Transparent"
                                       TextColor="White" />
                            </HorizontalStackLayout>
                        </StackLayout>

                    </Grid>
                </Frame>

                <!-- Card actions -->
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Button Text="Зберегти картку"
                            Command="{Binding AddCardCommand}"
                            IsVisible="{Binding IsCardPreset, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="#43A047"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="160"
                            HeightRequest="45" />
                    <Button Text="Скасувати"
                            Command="{Binding CancelUpdateCardCommand}"
                            IsVisible="{Binding IsUpdatingCard}"
                            BackgroundColor="#E53935"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="160"
                            HeightRequest="45" />
                    <Button Text="Змінити картку"
                            Command="{Binding UpdateCardCommand}"
                            IsVisible="{Binding IsCardPreset}"
                            BackgroundColor="#43A047"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="180"
                            HeightRequest="45" />
                    <Button Text="Видалити картку"
                            Command="{Binding DeleteCardCommand}"
                            IsVisible="{Binding IsUpdatingCard, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="#FF5252"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="180"
                            HeightRequest="45" />
                </HorizontalStackLayout>
                <BoxView HeightRequest="1" BackgroundColor="#D3D3D3" Margin="0,10" />

                <Frame CornerRadius="20" Padding="20" BackgroundColor="White" BorderColor="#E0E0E0" HasShadow="True">
                    <VerticalStackLayout Spacing="20">

                        <Label Text="Автоматичне поповнення"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#444" />

                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Увімкнути автоплатіж"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   TextColor="#666" />
                            <Switch IsToggled="{Binding IsAutoPaymentEnabled}"
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    OnColor="#A5D6A7" />
                        </Grid>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Мінімальне значення токенів"
                                   FontSize="16"
                                   TextColor="#444" />
                            <Entry Placeholder="100"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   BackgroundColor="#FAFAFA"
                                   HeightRequest="45"
                                   TextColor="#333"
                                   Text="{Binding MinimumTokenBalance}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Сума поповнення (₴)"
                                   FontSize="16"
                                   TextColor="#444" />
                            <Entry Placeholder="200"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   BackgroundColor="#FAFAFA"
                                   HeightRequest="45"
                                   TextColor="#333"
                                   Text="{Binding AutoRechargeAmount}" />
                        </VerticalStackLayout>

                        <Button Text="Зберегти налаштування"
                                TextColor="White"
                                CornerRadius="25"
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Command="{Binding SaveAutoPaymentSettingsCommand}" />

                    </VerticalStackLayout>
                </Frame>

                <BoxView HeightRequest="1" BackgroundColor="#D3D3D3" Margin="0,10" />

                <Frame CornerRadius="20" Padding="20" BackgroundColor="White" BorderColor="#E0E0E0" HasShadow="True">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Поповнення балансу"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#444" />

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Введіть суму для поповнення (₴)"
                                   FontSize="16"
                                   TextColor="#444" />
                            <Entry Placeholder="Сума"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   BackgroundColor="#FAFAFA"
                                   HeightRequest="45"
                                   TextColor="#333"
                                   Text="{Binding RechargeAmountInput}" />
                        </VerticalStackLayout>

                        <Button Text="Поповнити баланс"
                                TextColor="White"
                                CornerRadius="25"
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Command="{Binding RechargeBalanceCommand}" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="60"
            HeightRequest="60" />
    </Grid>
</ContentPage>