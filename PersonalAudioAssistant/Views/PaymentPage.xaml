<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:PersonalAudioAssistant.ViewModel"
    x:Class="PersonalAudioAssistant.Views.PaymentPage"
    Title="Керування оплатою">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CardActionButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="12,0" />
                <Setter Property="Margin" Value="8,0" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            </Style>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView IsEnabled="{Binding IsNotBusy}">
            <VerticalStackLayout Padding="24" Spacing="24">

                <Label Text="Введіть ваші дані:"
                                   FontSize="16"
                       FontAttributes="Bold"
                       IsVisible="{Binding IsCardPreset, Converter={StaticResource InvertedBoolConverter}}"

                       TextColor="#444" 
                       HorizontalOptions="Center"/>
                <!-- Card container: always visible, shows edit or masked view -->
                <Frame Padding="16" CornerRadius="20" BackgroundColor="#3966c8" HasShadow="True" HeightRequest="200" WidthRequest="340" HorizontalOptions="Center">
                    <Grid>
                        <!-- Edit/New entry form -->
                        <Grid VerticalOptions="Center" HorizontalOptions="Center" IsVisible="{Binding IsCardPreset, Converter={StaticResource InvertedBoolConverter}}">
                                <StackLayout Spacing="20" HorizontalOptions="Center"
                                             >
                                            <Label Text="Нова картка"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center" />

                                            <Entry Text="{Binding CardModel.CardNumber}"
                                                   Placeholder="0000 0000 0000 0000"
                                                   Keyboard="Numeric"
                                                   FontSize="20"
                                                   BackgroundColor="Transparent"
                                                   TextColor="White"
                                                   HorizontalTextAlignment="Center" />

                                    <HorizontalStackLayout Spacing="40" HorizontalOptions="Center">
                                        <Entry Text="{Binding CardModel.DateExpirience}"
                                               Placeholder="MM/YY"
                                               WidthRequest="100"
                                               FontSize="18"
                                               BackgroundColor="Transparent"
                                               TextColor="White"
                                               HorizontalTextAlignment="Center" />

                                        <Entry Text="{Binding CardModel.CVV_number}"
                                               Placeholder="CVV"
                                               WidthRequest="100"
                                               FontSize="18"
                                               IsPassword="True"
                                               BackgroundColor="Transparent"
                                               TextColor="White"
                                               HorizontalTextAlignment="Center" />
                                    </HorizontalStackLayout>
                                </StackLayout>
                        </Grid>


                        <!-- Masked card view -->
                        <Grid VerticalOptions="Center" HorizontalOptions="Center" IsVisible="{Binding IsCardPreset}">
                            <StackLayout Spacing="20" HorizontalOptions="Center">
                                <Label Text="Ваша картка"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center" />

                                <Entry Text="{Binding CardModel.MaskedCardNumber}"
                                       IsReadOnly="True"
                                       Keyboard="Numeric"
                                       FontSize="20"
                                       BackgroundColor="Transparent"
                                       TextColor="White"
                                       HorizontalTextAlignment="Center" />

                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="40">
                                    <Entry Text="{Binding CardModel.DateExpirience}"
                                           IsReadOnly="True"
                                           Placeholder="MM/YY"
                                           WidthRequest="100"
                                           FontSize="18"
                                           BackgroundColor="Transparent"
                                           TextColor="White"
                                           HorizontalTextAlignment="Center" />

                                    <Entry Text="•••"
                                           IsReadOnly="True"
                                           Placeholder="CVV"
                                           WidthRequest="100"
                                           FontSize="22"
                                           IsPassword="True"
                                           BackgroundColor="Transparent"
                                           TextColor="White"
                                           HorizontalTextAlignment="Center" />
                                </HorizontalStackLayout>
                            </StackLayout>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Card actions -->
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Button Text="Зберегти картку"
                            Command="{Binding AddCardCommand}"
                            IsVisible="{Binding IsCardPreset, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="#43A047"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="160"
                            HeightRequest="45" />
                    <Button Text="Скасувати"
                            Command="{Binding CancelUpdateCardCommand}"
                            IsVisible="{Binding IsUpdatingCard}"
                            BackgroundColor="#E53935"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="160"
                            HeightRequest="45" />
                    <Button Text="Змінити картку"
                            Command="{Binding UpdateCardCommand}"
                            IsVisible="{Binding IsCardPreset}"
                            BackgroundColor="#43A047"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="180"
                            HeightRequest="45" />
                    <Button Text="Видалити картку"
                            Command="{Binding DeleteCardCommand}"
                            IsVisible="{Binding IsUpdatingCard, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="#FF5252"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="180"
                            HeightRequest="45" />
                </HorizontalStackLayout>
                <BoxView HeightRequest="1" BackgroundColor="#D3D3D3" Margin="0,10" />

                <Frame CornerRadius="20" Padding="20" BackgroundColor="White" BorderColor="#E0E0E0" HasShadow="True">
                    <VerticalStackLayout Spacing="20">

                        <Label Text="Автоматичне поповнення"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#444" />

                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Увімкнути автоплатіж"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   TextColor="#666" />
                            <Switch IsToggled="{Binding IsAutoPaymentEnabled}"
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    OnColor="#A5D6A7" />
                        </Grid>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Мінімальне значення суми"
                                   FontSize="16"
                                   TextColor="#444" />
                            <Entry Placeholder="100"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   BackgroundColor="#FAFAFA"
                                   HeightRequest="45"
                                   TextColor="#333"
                                   Text="{Binding MinimumTokenBalance}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Сума поповнення (₴)"
                                   FontSize="16"
                                   TextColor="#444" />
                            <Entry Placeholder="200"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   BackgroundColor="#FAFAFA"
                                   HeightRequest="45"
                                   TextColor="#333"
                                   Text="{Binding AutoRechargeAmount}" />
                        </VerticalStackLayout>

                        <Button Text="Зберегти налаштування"
                                TextColor="White"
                                CornerRadius="25"
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Command="{Binding SaveAutoPaymentSettingsCommand}" />

                    </VerticalStackLayout>
                </Frame>

                <BoxView HeightRequest="1" BackgroundColor="#D3D3D3" Margin="0,10" />

                <Frame CornerRadius="20" Padding="20" BackgroundColor="White" BorderColor="#E0E0E0" HasShadow="True">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Поповнення балансу"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#444" />

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Введіть суму для поповнення (₴)"
                                   FontSize="16"
                                   TextColor="#444" />
                            <Entry Placeholder="Сума"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   BackgroundColor="#FAFAFA"
                                   HeightRequest="45"
                                   TextColor="#333"
                                   Text="{Binding RechargeAmountInput}" />
                        </VerticalStackLayout>

                        <Button Text="Поповнити баланс"
                                TextColor="White"
                                CornerRadius="25"
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Command="{Binding RechargeBalanceCommand}" />
                    </VerticalStackLayout>
                </Frame>

                <BoxView HeightRequest="1" BackgroundColor="#D3D3D3" Margin="0,10" />

                <Frame CornerRadius="20" BackgroundColor="White" BorderColor="#E0E0E0" HasShadow="True">

                    <VerticalStackLayout Spacing="30">

                        <!-- Заголовок із підзаголовком та інструкцією -->
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="📊 Калькулятор вартості"
           FontSize="24"
           FontAttributes="Bold"
           TextColor="#333" />
                            <Label Text="Цей калькулятор допоможе вам дізнатися, скільки приблизно коштує запит до системи: розпізнавання голосу, відповідь GPT і озвучення."
           FontSize="14"
           TextColor="#666"
           HorizontalTextAlignment="Center"
           LineBreakMode="WordWrap" />
                        </VerticalStackLayout>


                        <Label Text="Введіть речення для аналізу:"
                               FontSize="16"
                               Margin="10,0,0,-20"
                               TextColor="#444" />
                        
                        <!-- Поле введення користувача -->
                        <Frame CornerRadius="12"
                               Padding="12"
                               BackgroundColor="White"
                               BorderColor="#E0E0E0"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="12">
                                <Editor Placeholder="Введіть ваше речення тут..."
                                        FontSize="16"
                                        BackgroundColor="#FAFAFA"
                                        HeightRequest="200"
                                        TextColor="#333"
                                        Text="{Binding TextInput}" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Кнопка розрахунку -->
                        <Button Text="Розрахувати вартість"
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="25"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                Command="{Binding CalculatePriceCommand}" />
                        <StackLayout IsVisible="{Binding IsResultExist}">
                            <Label Text="РЕЗУЛЬТАТ:"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   Margin="10,0,0,-30"
                                   TextColor="#444" />
                            <Frame Padding="10"
                                   Margin="0,10,0,0"
                                   BorderColor="#ccc"
                                   CornerRadius="10"
                                   HasShadow="True"
                                   BackgroundColor="White">
                                <Label Text="{Binding TokenCalculationResult}"
                                       FontSize="14"
                                       TextColor="#333"
                                       LineBreakMode="WordWrap" />
                            </Frame>
                        </StackLayout>

                    </VerticalStackLayout>

                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="60"
            HeightRequest="60" />
    </Grid>
</ContentPage>