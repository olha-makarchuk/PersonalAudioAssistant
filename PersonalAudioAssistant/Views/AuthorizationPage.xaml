<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAudioAssistant.View.AuthorizationPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackgroundColor}, Dark={StaticResource DarkBackgroundColor}}">

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" HorizontalOptions="Center" Spacing="10" Margin="0, 100, 0, 0">
            <Label Text="Вітаємо!"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
            <Label Text="Увійдіть у свій обліковий запис"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />

            <Frame Padding="20"
                   CornerRadius="15"
                    WidthRequest="350"
                   
                   BackgroundColor="{AppThemeBinding Light={StaticResource LightEntryBackgroundColor}, Dark={StaticResource DarkEntryBackgroundColor}}">
                <VerticalStackLayout Spacing="20">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Електронна пошта"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
                        <Entry Placeholder="Введіть електронну пошту"
                               Keyboard="Email"
                               WidthRequest="300"
                               Text="{Binding Email}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Пароль"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
                        <Entry Placeholder="Введіть пароль"
                               IsPassword="True"
                               WidthRequest="300"
                               Text="{Binding Password}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Увійти"
                    Command="{Binding SignInCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    WidthRequest="300"
                    HeightRequest="50"
                    FontSize="18" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <BoxView WidthRequest="50"
                         HeightRequest="1"
                         BackgroundColor="{AppThemeBinding Light={StaticResource LightSeparatorColor}, Dark={StaticResource DarkSeparatorColor}}"
                         VerticalOptions="Center" />
                <Label Text="Або"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
                <BoxView WidthRequest="50"
                         HeightRequest="1"
                         BackgroundColor="{AppThemeBinding Light={StaticResource LightSeparatorColor}, Dark={StaticResource DarkSeparatorColor}}"
                         VerticalOptions="Center" />
            </StackLayout>

            <Button Text="Увійти через Google"
                    Command="{Binding SignInGoogleCommand}"
                    BackgroundColor="#FFFFFF"
                    TextColor="Black"
                    HeightRequest="50"
                    FontSize="16"
                    ImageSource="google_logo.png"
                    ContentLayout="Left,15"
                    BorderColor="#333333"
                    WidthRequest="300"
                    BorderWidth="0.5" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Color="{StaticResource Primary}" />
        </StackLayout>

        <Grid Grid.Row="2" HorizontalOptions="Center" ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="Не маєте облікового запису?"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}"
                   Grid.Column="0" />
            <Label Text="Зареєструватися"
                   FontSize="14"
                   TextColor="{StaticResource Primary}"
                   FontAttributes="Bold"
                   Grid.Column="1">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignUpCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </Grid>
</ContentPage>
