<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAudioAssistant.Views.ProgramPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:PersonalAudioAssistant.ViewModel"
             Title="Audio Assistant">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ListenButtonTextConverter x:Key="ListenButtonTextConverter" />
            <local:BoolToColorConverter x:Key="BoolToColorConverterChat"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto" Padding="10">

        <!-- Scrollable Chat Section -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <CollectionView ItemsSource="{Binding ChatMessages}" Margin="10"
                                VerticalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" CornerRadius="12" HasShadow="True">
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" Binding="{Binding IsUser}" Value="True">
                                        <Setter Property="HorizontalOptions" Value="End" />
                                        <Setter Property="BackgroundColor" Value="#90CAF9" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Frame" Binding="{Binding IsUser}" Value="False">
                                        <Setter Property="HorizontalOptions" Value="Start" />
                                        <Setter Property="BackgroundColor" Value="#E1BEE7" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <Label Text="{Binding Text}" TextColor="#0d1996" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="{Binding RecognitionText}"
                       FontSize="18"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Buttons Section -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,*" Padding="0,10,0,10">
            <BoxView Grid.Column="0" BackgroundColor="Transparent"/>

            <Button Grid.Column="1"
                    Text="{Binding IsListening, Converter={StaticResource ListenButtonTextConverter}}"
                    Command="{Binding ToggleListenCommand}"
                    WidthRequest="100"
                    HeightRequest="100"
                    CornerRadius="50"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsListening}" Value="True">
                        <Setter Property="BackgroundColor" Value="#8A75F8" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding IsListening}" Value="False">
                        <Setter Property="BackgroundColor" Value="#5E42F6" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button Grid.Column="2"
                    Text="Pause"
                    WidthRequest="70"
                    HeightRequest="70"
                    CornerRadius="35"
                    IsVisible="{Binding IsListening}"
                    BackgroundColor="#a6a6a6"/>

        </Grid>
    </Grid>
</ContentPage>
