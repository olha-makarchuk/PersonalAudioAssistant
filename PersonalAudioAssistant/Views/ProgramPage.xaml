<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAudioAssistant.Views.ProgramPage"
             Title="Audio Assistant">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Recognition result label -->
            <Label
                Text="{Binding RecognitionText}"
                FontSize="18"
                HorizontalOptions="Center" />

            <!-- Optional: Animated indicator for listening.
                 The ActivityIndicator's IsRunning and IsVisible are bound to IsListening -->
            <ActivityIndicator
                Color="Green"
                WidthRequest="50"
                HeightRequest="50"
                IsVisible="{Binding IsListening}"
                IsRunning="{Binding IsListening}"
                HorizontalOptions="Center" />

            <!-- Listen start button -->
            <Button
                Text="Listen"
                Command="{Binding ListenCommand}"
                HorizontalOptions="Center" />

            <!-- Listen cancel button -->
            <Button
                Text="Listen Cancel"
                Command="{Binding ListenCancelCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
