<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAudioAssistant.Views.ProgramPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:PersonalAudioAssistant.ViewModel"
             Title="Audio Assistant">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ListenButtonTextConverter x:Key="ListenButtonTextConverter" />
            <local:BoolToColorConverter x:Key="BoolToColorConverterChat"/>

            <Style x:Key="PlayButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#8584df" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="sans-serif-medium" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="WidthRequest" Value="60" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Padding" Value="0" />
                <Style.Triggers>
                    <!-- Hover or Press effect (if supported) -->
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="#3565bd" />
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Grid adjusted to avoid overlapping -->
    <Grid RowDefinitions="*,Auto,Auto,Auto">
        <!-- Основна область повідомлень -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <CollectionView ItemsSource="{Binding ChatMessages}" 
                                SelectedItem="{Binding SelectedMessage, Mode=TwoWay}" 
                                RemainingItemsThreshold="5"
                                RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
                                Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2" ColumnDefinitions="Auto,*">
                                <Grid.Triggers>
                                    <DataTrigger TargetType="Grid" Binding="{Binding UserRole}" Value="user">
                                        <Setter Property="FlowDirection" Value="RightToLeft" />
                                    </DataTrigger>
                                </Grid.Triggers>

                                <!-- Аватарка -->
                                <Frame Grid.Column="0"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       CornerRadius="40"
                                       Margin="0,0,1,0"
                                       HasShadow="False"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       BackgroundColor="Transparent">
                                                            <Image
                                                                Aspect="AspectFill"
                                                                WidthRequest="80"
                                                                HeightRequest="80"
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="Center">
                                        <Image.Source>
                                            <UriImageSource Uri="{Binding SubUserPhoto}" CachingEnabled="False"/>
                                        </Image.Source>
                                    </Image>
                                </Frame>

                                <!-- Повідомлення -->
                                <Frame Grid.Column="1"
                                       Padding="10"
                                       CornerRadius="12"
                                       WidthRequest="200"
                                       HasShadow="True">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame" Binding="{Binding UserRole}" Value="user">
                                            <Setter Property="BackgroundColor" Value="#bfe0ff" />
                                            <Setter Property="HorizontalOptions" Value="Start" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame" Binding="{Binding UserRole}" Value="ai">
                                            <Setter Property="BackgroundColor" Value="#e5e3fe" />
                                            <Setter Property="HorizontalOptions" Value="Start" />
                                        </DataTrigger>
                                    </Frame.Triggers>

                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Text}" FontSize="16" HorizontalOptions="Start" />
                                        <Button Style="{StaticResource PlayButtonStyle}"
                                                WidthRequest="25"
                                                HeightRequest="25"
                                                Text="▶"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:ProgramPageViewModel}}, Path=PlaySelectedMessageCommand}"
                                                CommandParameter="{Binding .}">
                                            <Button.Triggers>
                                                <DataTrigger TargetType="Button" Binding="{Binding UserRole}" Value="ai">
                                                    <Setter Property="HorizontalOptions" Value="Start" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Button" Binding="{Binding UserRole}" Value="user">
                                                    <Setter Property="HorizontalOptions" Value="Start" />
                                                </DataTrigger>
                                            </Button.Triggers>
                                        </Button>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                    <CollectionView.Footer>
                        <Grid HorizontalOptions="Center">
                            <ActivityIndicator IsVisible="{Binding IsLoadingMore}"
                                               IsRunning="{Binding IsLoadingMore}"
                                               WidthRequest="30"
                                               HeightRequest="30"
                                               Color="Black" />
                        </Grid>
                    </CollectionView.Footer>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- 🔻 Переміщений блок керування аудіо -->
        <VerticalStackLayout Grid.Row="1">
            <Grid ColumnDefinitions="Auto,Auto,Auto,*"
      VerticalOptions="Center"
      HorizontalOptions="Center">
                <Frame CornerRadius="25"
           Padding="0"
           HasShadow="False"
           BackgroundColor="Transparent"
           HorizontalOptions="Center">
                    <StackLayout Orientation="Horizontal" Spacing="0"
                     BackgroundColor="Transparent">
                        <!-- First button -->
                        <Button Text="◀"
                    Command="{Binding PreviousCommand}"
                    IsEnabled="{Binding CanPrevious}"
                    FontSize="20"
                    BackgroundColor="#7356dc"
                    CornerRadius="0"
                    WidthRequest="50"
                    HeightRequest="50"
                    Margin="0" />

                        <!-- White vertical line -->
                        <BoxView WidthRequest="1"
                     HeightRequest="50"
                     Color="White"
                     VerticalOptions="Center" />

                        <!-- Middle button -->
                        <Button Text="❚❚"
                    Command="{Binding PlayPauseCommand}"
                    IsEnabled="{Binding CanPlayPause}"
                    FontSize="16"
                    CornerRadius="0"
                    BackgroundColor="#7356dc"
                    WidthRequest="50"
                    HeightRequest="50"
                    Margin="0" />
                        <!-- White vertical line -->
                        <BoxView WidthRequest="1"
                     HeightRequest="50"
                     Color="White"
                     VerticalOptions="Center" />

                        <!-- Last button -->
                        <Button Text="▶"
                    Command="{Binding NextCommand}"
                    IsEnabled="{Binding CanNext}"
                    FontSize="20"
                    CornerRadius="0"
                    BackgroundColor="#7356dc"
                    WidthRequest="50"
                    HeightRequest="50"
                    Margin="0" />
                    </StackLayout>
                </Frame>
            </Grid>



            <HorizontalStackLayout HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   Padding="0,-10,20,0">
                <HorizontalStackLayout>
                    <!-- Мітка для автозапуску -->
                    <Label Text="Автовідтворення:"
                           VerticalOptions="Center"
                           FontSize="14"
                           HorizontalOptions="End" />
                    <!-- Перемикач для автозапуску -->
                    <Switch IsToggled="{Binding IsAutoPlay}"
                            VerticalOptions="Center"
                            HorizontalOptions="End" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Buttons Section -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,*" Padding="0,0,0,10">
            <BoxView Grid.Column="0" BackgroundColor="Transparent" VerticalOptions="End"/>

            <Button Grid.Column="1"
                    Text="{Binding IsListening, Converter={StaticResource ListenButtonTextConverter}}"
                    Command="{Binding ToggleListenCommand}"
                    WidthRequest="100"
                    HeightRequest="100"
                    CornerRadius="50"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsListening}" Value="True">
                        <Setter Property="BackgroundColor" Value="#8A75F8" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding IsListening}" Value="False">
                        <Setter Property="BackgroundColor" Value="#512bd4" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </Grid>

        <!-- Прихований MediaElement -->
        <toolkit:MediaElement x:Name="mediaElement"
                              Source="{Binding SelectedMessage.URL}"
                              IsVisible="False"
                              Grid.Row="3"/>
    </Grid>
</ContentPage>
