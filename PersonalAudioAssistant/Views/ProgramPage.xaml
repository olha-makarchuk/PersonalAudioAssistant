<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalAudioAssistant.Views.ProgramPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:PersonalAudioAssistant.ViewModel"
             Title="Audio Assistant">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ListenButtonTextConverter x:Key="ListenButtonTextConverter" />
            <local:BoolToColorConverter x:Key="BoolToColorConverterChat"/>

            <Style x:Key="PlayButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4A90E2" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="sans-serif-medium" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="WidthRequest" Value="60" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Padding" Value="0" />
                <Style.Triggers>
                    <!-- Hover or Press effect (if supported) -->
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="#3565bd" />
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <Grid RowDefinitions="*,0,Auto,Auto" Padding="10,0,0,0">
        <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð° Ð¾Ð±Ð»Ð°ÑÑ‚ÑŒ Ð¿Ð¾Ð²Ñ–Ð´Ð¾Ð¼Ð»ÐµÐ½ÑŒ -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <CollectionView ItemsSource="{Binding ChatMessages}" 
                            SelectedItem="{Binding SelectedMessage, Mode=TwoWay}" 
                            RemainingItemsThreshold="5"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
                            Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10,5" ColumnDefinitions="Auto,*,Auto">
                                <!-- ÐžÐ±Ð¾Ð»Ð¾Ð½ÐºÐ° Ð¿Ð¾Ð²Ñ–Ð´Ð¾Ð¼Ð»ÐµÐ½Ð½Ñ -->
                                <Frame Grid.Column="1"
                                   Padding="10"
                                   CornerRadius="12"
                                   WidthRequest="300"
                                   HasShadow="True">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                                 Binding="{Binding UserRole}"
                                                 Value="user">
                                            <Setter Property="BackgroundColor" Value="#90CAF9" />
                                            <Setter Property="HorizontalOptions" Value="End" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                 Binding="{Binding UserRole}"
                                                 Value="ai">
                                            <Setter Property="BackgroundColor" Value="#E1BEE7" />
                                            <Setter Property="HorizontalOptions" Value="Start" />
                                        </DataTrigger>
                                    </Frame.Triggers>

                                    <VerticalStackLayout Spacing="5">
                                        <!-- Ð¢ÐµÐºÑÑ‚ Ð¿Ð¾Ð²Ñ–Ð´Ð¾Ð¼Ð»ÐµÐ½Ð½Ñ -->
                                        <Label Text="{Binding Text}" 
                                           TextColor="#0d1996" 
                                           HorizontalOptions="Start" />

                                        <Button Style="{StaticResource PlayButtonStyle}"
                                            WidthRequest="30"
                                            HeightRequest="30"
                                            Text="â–¶"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:ProgramPageViewModel}}, Path=PlaySelectedMessageCommand}"
                                            CommandParameter="{Binding .}">
                                            <Button.Triggers>
                                                <DataTrigger TargetType="Button"
                                                             Binding="{Binding UserRole}"
                                                             Value="ai">
                                                    <Setter Property="HorizontalOptions" Value="Start" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Button"
                                                             Binding="{Binding UserRole}"
                                                             Value="user">
                                                    <Setter Property="HorizontalOptions" Value="End" />
                                                </DataTrigger>
                                            </Button.Triggers>
                                        </Button>

                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.Footer>
                        <Grid Padding="10" HorizontalOptions="Center">
                            <ActivityIndicator IsVisible="{Binding IsLoadingMore}"
                                           IsRunning="{Binding IsLoadingMore}"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           Color="Black" />
                        </Grid>
                    </CollectionView.Footer>
                </CollectionView>

                <Label Text="{Binding RecognitionText}" 
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- ðŸ”» ÐŸÐµÑ€ÐµÐ¼Ñ–Ñ‰ÐµÐ½Ð¸Ð¹ Ð±Ð»Ð¾Ðº ÐºÐµÑ€ÑƒÐ²Ð°Ð½Ð½Ñ Ð°ÑƒÐ´Ñ–Ð¾ -->
        <VerticalStackLayout Grid.Row="2"
                     Padding="20">

            <Grid ColumnSpacing="15"
          ColumnDefinitions="Auto,Auto,Auto,*"
          VerticalOptions="Center"
          HorizontalOptions="Center">
                <Button Grid.Column="0"
                Text="â—€"
                Command="{Binding PreviousCommand}"
                IsEnabled="{Binding CanPrevious}"
                FontSize="20"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="50" />
                <Button Grid.Column="1"
                Text="â¯"
                Command="{Binding PlayPauseCommand}"
                IsEnabled="{Binding CanPlayPause}"
                FontSize="20"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="50" />
                <Button Grid.Column="2"
                Text="â–¶"
                Command="{Binding NextCommand}"
                IsEnabled="{Binding CanNext}"
                FontSize="20"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="50" />
            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Spacing="20"
                   Margin="0,20,0,0"
                   Padding="10, 0">
                
                <HorizontalStackLayout>
                    <!-- ÐœÑ–Ñ‚ÐºÐ° Ð´Ð»Ñ Ð°Ð²Ñ‚Ð¾Ð·Ð°Ð¿ÑƒÑÐºÑƒ -->
                    <Label Text="ÐÐ²Ñ‚Ð¾Ð²Ñ–Ð´Ñ‚Ð²Ð¾Ñ€ÐµÐ½Ð½Ñ:"
                   VerticalOptions="Center"
                   FontSize="14"
                   HorizontalOptions="Center" />

                    <!-- ÐŸÐµÑ€ÐµÐ¼Ð¸ÐºÐ°Ñ‡ Ð´Ð»Ñ Ð°Ð²Ñ‚Ð¾Ð·Ð°Ð¿ÑƒÑÐºÑƒ -->
                    <Switch IsToggled="{Binding IsAutoPlay}"
                    VerticalOptions="Center"
                    HorizontalOptions="Start" />
                </HorizontalStackLayout>

            </HorizontalStackLayout>
        </VerticalStackLayout>


        <!-- Buttons Section -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,*" Padding="0,10,0,10">
            <BoxView Grid.Column="0" BackgroundColor="Transparent"/>

            <Button Grid.Column="1"
                    Text="{Binding IsListening, Converter={StaticResource ListenButtonTextConverter}}"
                    Command="{Binding ToggleListenCommand}"
                    WidthRequest="100"
                    HeightRequest="100"
                    CornerRadius="50"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsListening}" Value="True">
                        <Setter Property="BackgroundColor" Value="#8A75F8" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding IsListening}" Value="False">
                        <Setter Property="BackgroundColor" Value="#5E42F6" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button Grid.Column="2"
                    Text="Pause"
                    WidthRequest="70"
                    HeightRequest="70"
                    CornerRadius="35"
                    IsVisible="{Binding IsListening}"
                    BackgroundColor="#a6a6a6"/>

        </Grid>
        <!-- ÐŸÑ€Ð¸Ñ…Ð¾Ð²Ð°Ð½Ð¸Ð¹ MediaElement -->
        <toolkit:MediaElement x:Name="mediaElement"
                      Source="{Binding SelectedMessage.URL}"
                      IsVisible="False"
                      Grid.Row="3"/>
    </Grid>
</ContentPage>
